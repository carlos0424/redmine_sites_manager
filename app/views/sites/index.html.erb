<div class="contextual">
  <%= link_to l('plugin_sites_manager.sites.new'), new_site_path, class: 'icon icon-add' %>
  <%= link_to l('plugin_sites_manager.sites.import'), import_sites_path, class: 'icon icon-import' %>
</div>

<h2><%= l('plugin_sites_manager.sites.list') %></h2>

<div class="fields-grid">
  <fieldset>
    <legend><%= l('plugin_sites_manager.settings.title') %></legend>
    
    <%# Organiza los campos en una cuadrÃ­cula %>
    <div class="grid-container">
      <p>
        <label><%= l('plugin_sites_manager.fields.s_id') %></label>
        <%= select_tag 's_id' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.depto') %></label>
        <%= select_tag 'depto' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.municipio') %></label>
        <%= select_tag 'municipio' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.nom_sitio') %></label>
        <%= select_tag 'nom_sitio' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.direccion') %></label>
        <%= select_tag 'direccion' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.identificador') %></label>
        <%= select_tag 'identificador' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.jerarquia_definitiva') %></label>
        <%= select_tag 'jerarquia_definitiva' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.fijo_variable') %></label>
        <%= select_tag 'fijo_variable' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.coordinador') %></label>
        <%= select_tag 'coordinador' %>
      </p>
      <%# Incluye los campos personalizados adicionales %>
      <p>
        <label><%= l('plugin_sites_manager.fields.campo_adicional_1') %></label>
        <%= select_tag 'campo_adicional_1' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.campo_adicional_2') %></label>
        <%= select_tag 'campo_adicional_2' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.campo_adicional_3') %></label>
        <%= select_tag 'campo_adicional_3' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.campo_adicional_4') %></label>
        <%= select_tag 'campo_adicional_4' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.campo_adicional_5') %></label>
        <%= select_tag 'campo_adicional_5' %>
      </p>
      <p>
        <label><%= l('plugin_sites_manager.fields.active') %></label>
        <%= select_tag 'active' %>
      </p>
    </div>
  </fieldset>
</div>

<style>
  .fields-grid .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
  }

  .fields-grid label {
    font-weight: bold;
    display: block;
    margin-bottom: 4px;
  }

  .fields-grid p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .fields-grid .grid-container {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
</style>
